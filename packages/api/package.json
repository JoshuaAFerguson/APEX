{
  "name": "@apexcli/api",
  "version": "0.3.0",
  "description": "APEX REST API and WebSocket server",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@apexcli/core": "^0.3.0",
    "@apexcli/orchestrator": "^0.3.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "fastify": "^4.25.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoshuaAFerguson/apex.git",
    "directory": "packages/api"
  },
  "bugs": {
    "url": "https://github.com/JoshuaAFerguson/apex/issues"
  },
  "homepage": "https://github.com/JoshuaAFerguson/apex#readme",
  "keywords": ["apex", "ai", "agents", "api", "rest", "websocket"],
  "author": "Joshua A. Ferguson",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
